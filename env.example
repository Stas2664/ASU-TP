# ==============================================================================
# Конфигурация окружения для ПТК АСУ ТП
# Скопируйте этот файл в .env и настройте параметры
# ==============================================================================

# PostgreSQL настройки
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecurePassword123!
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Часовой пояс
TZ=Europe/Moscow

# pgAdmin настройки (веб-интерфейс для управления БД)
PGADMIN_EMAIL=admin@asu-tp.local
PGADMIN_PASSWORD=AdminPassword123!
PGADMIN_PORT=5050

# Grafana настройки (мониторинг)
GRAFANA_USER=admin
GRAFANA_PASSWORD=GrafanaPassword123!
GRAFANA_PORT=3000

# Резервное копирование
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Каждый день в 2:00

# Настройки производительности БД (в MB)
SHARED_BUFFERS=4096          # 25% от RAM
EFFECTIVE_CACHE_SIZE=12288   # 75% от RAM
MAINTENANCE_WORK_MEM=1024
WORK_MEM=32

# Лимиты ресурсов Docker
POSTGRES_CPU_LIMIT=4
POSTGRES_MEMORY_LIMIT=8G
POSTGRES_CPU_RESERVATION=2
POSTGRES_MEMORY_RESERVATION=4G

# Сетевые настройки
NETWORK_SUBNET=172.20.0.0/24

# Логирование
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Режим работы (development/production)
ENVIRONMENT=development

# КРОСС платформа настройки
KROSS_LICENSE_KEY=
KROSS_SYSTEM_NAME="ПТК АСУ ТП Энергоблок №1"
KROSS_VERSION=1.0.0

# OPC UA Server
OPC_SERVER_PORT=4840
OPC_SERVER_ENABLED=true

# Modbus настройки
MODBUS_TCP_PORT=502
MODBUS_TIMEOUT=3000

# Web API настройки
API_PORT=8080
API_ENABLED=true
API_CORS_ENABLED=true
API_RATE_LIMIT=1000

# SSL/TLS настройки (для production)
SSL_ENABLED=false
SSL_CERT_PATH=/certs/server.crt
SSL_KEY_PATH=/certs/server.key

# Репликация
REPLICATION_ENABLED=false
REPLICATION_STANDBY_HOSTS=

# Мониторинг и алерты
MONITORING_ENABLED=true
ALERT_EMAIL=
ALERT_SMS=
ALERT_WEBHOOK_URL=

# Архивирование
ARCHIVE_RETENTION_DAYS=365
ARCHIVE_COMPRESSION_ENABLED=true
ARCHIVE_PARTITION_SIZE=quarterly

# Аутентификация
AUTH_SESSION_TIMEOUT=3600
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
AUTH_PASSWORD_MIN_LENGTH=12
AUTH_PASSWORD_REQUIRE_SPECIAL=true
AUTH_PASSWORD_REQUIRE_NUMBERS=true
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_MFA_ENABLED=false

# Email настройки (для уведомлений)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@asu-tp.local
SMTP_TLS=true

# Отладка (только для разработки)
DEBUG=false
DEBUG_SQL=false
DEBUG_PERFORMANCE=false



